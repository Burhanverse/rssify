{
  "type": "module",
  "dependencies": {
    "axios": "^1.7.7",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.5",
    "feedparser": "^2.2.10",
    "markdown-escape": "^2.0.0",
    "mongodb": "^6.11.0",
    "telegraf": "^4.16.3"
  },
  "name": "rssify",
  "version": "3.4.1",
  "description": "RSS-ify brings you the latest updates from your favorite feeds right into Telegram, hassle-free!",
  "main": "bot.mjs",
  "scripts": {
    "start": "npm install concurrently && npm run launch",
    "launch": "concurrently \"npm:api\" \"npm:bot\"",
    "api": "pip install -r api/feedparser/requirements.txt && python3 api/feedparser/api.py",
    "bot": "npm install && node bot.mjs",
    "prod": "python3 api/feedparser/api.py && node bot.mjs"
  },
